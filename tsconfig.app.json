{
  "compilerOptions": {
    "target": "ES2020", // современный таргет
    "module": "CommonJS", // npm ожидает CJS по умолчанию
    "declaration": true, // генерируем .d.ts
    "emitDeclarationOnly": false, // генерируем и js, и d.ts
    "declarationDir": "./dist", // куда складывать .d.ts
    "outDir": "./dist", // папка для js
    "rootDir": "./src", // исходники
    "strict": true, // строгая типизация
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}